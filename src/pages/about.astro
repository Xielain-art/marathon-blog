---
import Layout from "../layouts/Layout.astro";
import { Skeleton } from "@/components/ui/skeleton";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { Separator } from "@/components/ui/separator";
import PostCard from "@/components/PostCard.astro";

// ─── Data Arrays ─────────────────────────────────────────────────────────────

import {
  vitalStats,
  historyEvents,
  userComments,
  posts as allPosts,
} from "@/lib/mockData";

const userPosts = allPosts.slice(3, 5); // Simulated subset for the operative
---

---

<Layout>
  <div
    class="max-w-5xl w-full mx-auto flex flex-col gap-8 py-8 pb-24 md:pb-8 overflow-x-hidden"
  >
    <!-- Page Header -->
    <div class="border-b-4 border-primary pb-4 relative overflow-hidden">
      <div
        class="absolute right-0 top-0 text-primary/5 select-none font-bold text-9xl leading-none -mt-4 pointer-events-none"
      >
        USR
      </div>
      <div class="flex flex-wrap justify-between items-end gap-2 relative z-10">
        <h1
          class="text-3xl md:text-5xl font-sans font-black uppercase tracking-tighter text-foreground"
        >
          Personnel File
        </h1>
        <Badge
          variant="destructive"
          className="rounded-none font-mono text-xs uppercase tracking-widest animate-pulse"
        >
          Confidential
        </Badge>
      </div>
      <p
        class="font-mono text-primary text-xs uppercase tracking-widest mt-2 relative z-10"
      >
        &gt; UESC MARATHON / ARCHIVE ACCESS // AUTHORIZED EYES ONLY
      </p>
    </div>

    <!-- Breadcrumbs & System Hint -->
    <div class="flex flex-col gap-4">
      <nav
        class="font-mono text-[10px] sm:text-xs tracking-[0.2em] text-muted-foreground/60 uppercase"
      >
        SYS.PATH: <span class="text-primary/40">ROOT</span> /
        <span class="text-primary/40">DOSSIER</span> /
        <span class="text-primary">PERSONNEL_FILE</span>
      </nav>

      <div
        class="border-l-2 border-primary bg-primary/5 p-3 sm:p-4 backdrop-blur-sm"
      >
        <p
          class="font-mono text-xs sm:text-sm text-foreground/70 leading-relaxed uppercase tracking-wider"
        >
          <span class="text-primary font-bold mr-2">SYSTEM OVERRIDE:</span>
          Публичный профиль пользователя. Здесь отображается статистика автора и история
          его публикаций.
        </p>
      </div>
    </div>

    <!-- Dashboard Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
      <!-- ── LEFT SIDEBAR: ID Card ───────────────────────────────────────── -->
      <aside
        class="flex flex-col gap-4 md:col-span-1 border border-primary/30 bg-secondary/10 p-4 md:sticky md:top-24"
      >
        <!-- Portrait Placeholder -->
        <div
          class="w-full aspect-[3/4] bg-background border border-border relative overflow-hidden"
        >
          <div class="absolute inset-0 bg-primary/10 pattern-grid-lg"></div>
          <Skeleton
            className="w-full h-full rounded-none bg-primary/20 opacity-30"
          />
          <div
            class="absolute inset-0 flex items-center justify-center font-mono text-primary rotate-45 select-none opacity-50 uppercase tracking-widest text-xl text-center break-all px-4"
          >
            NO IMAGE DATA
          </div>
          <!-- Scanner bar effect -->
          <div
            class="absolute inset-x-0 h-1 bg-primary/80 blur-[1px] shadow-[0_0_10px_rgba(var(--primary),0.8)] top-0 animate-[scan_3s_ease-in-out_infinite]"
          >
          </div>
        </div>

        <!-- Vital Stats (data-driven) -->
        <div class="flex flex-col gap-2 font-mono text-sm uppercase">
          {
            vitalStats.map((stat) => (
              <div class="flex justify-between items-center gap-2 border-b border-border/30 pb-1.5 min-w-0">
                <span class="text-muted-foreground text-xs shrink-0">
                  {stat.label}:
                </span>
                {stat.skeleton ? (
                  <Skeleton className="h-4 w-full max-w-[100px] rounded-none bg-primary/20" />
                ) : stat.badge ? (
                  <Badge
                    variant="outline"
                    className="rounded-none text-[10px] border-primary text-primary px-1 shrink-0"
                  >
                    {stat.value}
                  </Badge>
                ) : (
                  <span
                    class={`font-bold text-right wrap-break-word min-w-0 overflow-hidden
                  ${stat.green ? "text-green-400" : ""}
                  ${stat.highlight ? "text-primary" : "text-foreground"}
                  ${stat.blink ? "animate-blink" : ""}
                `}
                  >
                    {stat.value}
                  </span>
                )}
              </div>
            ))
          }
        </div>

        <Separator className="bg-border/30" />

        <!-- Configure Profile Button -->
        <a href="/settings" class="w-full block">
          <Button
            variant="outline"
            className="w-full rounded-none font-mono text-xs uppercase tracking-widest border-primary/50 hover:bg-primary/10 hover:text-primary transition-all h-10"
          >
            [ Configure Profile ]
          </Button>
        </a>
      </aside>

      <!-- ── MAIN CONTENT ────────────────────────────────────────────────── -->
      <div class="flex flex-col gap-10 md:col-span-2 min-w-0">
        <!-- ── Section 1: AUTHOR'S LOGS (User Posts) ───────────────────── -->
        <section class="flex flex-col gap-4">
          <div class="flex items-center gap-3 border-b border-primary/50 pb-2">
            <span class="w-2 h-2 bg-primary animate-pulse inline-block shrink-0"
            ></span>
            <h2
              class="font-sans text-xl uppercase tracking-widest text-primary"
            >
              Author's Logs
            </h2>
            <Badge
              variant="outline"
              className="ml-auto rounded-none text-[10px] font-mono border-border text-muted-foreground shrink-0"
            >
              {userPosts.length} RECORDS
            </Badge>
          </div>

          {
            userPosts.length > 0 ? (
              <div class="grid grid-cols-1 gap-4">
                {userPosts.map((post) => (
                  <PostCard post={post} />
                ))}
              </div>
            ) : (
              <div class="border border-dashed border-border/50 p-8 text-center text-muted-foreground font-mono text-sm uppercase tracking-widest">
                &gt; NO DATA FOUND FOR THIS QUERY
              </div>
            )
          }
        </section>

        <!-- ── Section 2: NETWORK TRANSMISSIONS (Comments) ─────────────── -->
        <section class="flex flex-col gap-4">
          <div class="flex items-center gap-3 border-b border-border/50 pb-2">
            <h2
              class="font-sans text-xl uppercase tracking-widest text-foreground"
            >
              Recent Network Activity
            </h2>
            <Badge
              variant="secondary"
              className="ml-auto rounded-none text-[10px] font-mono shrink-0"
            >
              {userComments.length} ENTRIES
            </Badge>
          </div>

          {
            userComments.length > 0 ? (
              <div class="flex flex-col gap-3">
                {userComments.map((comment) => (
                  <div class="flex flex-col gap-2 p-4 border-l-2 border-primary bg-primary/5 min-w-0">
                    <div class="flex flex-wrap justify-between items-center font-mono text-xs uppercase gap-2">
                      <a
                        href={`/blog/${comment.targetSlug}`}
                        class="text-primary hover:underline underline-offset-4 decoration-primary wrap-break-word min-w-0"
                      >
                        RE: {comment.targetTitle}
                      </a>
                      <span class="text-muted-foreground shrink-0">
                        {comment.date}
                      </span>
                    </div>
                    <p class="font-mono text-sm text-foreground/80 leading-relaxed wrap-break-word">
                      "{comment.excerpt}"
                    </p>
                  </div>
                ))}
              </div>
            ) : (
              <div class="border border-dashed border-border/50 p-8 text-center text-muted-foreground font-mono text-sm uppercase tracking-widest">
                &gt; NO DATA FOUND FOR THIS QUERY
              </div>
            )
          }
        </section>

        <!-- ── Section 3: RESTRICTED DOSSIER ─────────────────────────── -->
        <section class="flex flex-col gap-4">
          <div
            class="flex items-center gap-3 border-b border-destructive/40 pb-2"
          >
            <span
              class="w-2 h-2 bg-destructive animate-pulse inline-block shrink-0"
            ></span>
            <h2
              class="font-sans text-xl uppercase tracking-widest text-destructive"
            >
              Restricted Personnel Data
            </h2>
          </div>

          <div
            class="border border-border/40 bg-secondary/5 p-4 sm:p-6 flex flex-col gap-8"
          >
            <!-- Current Assignment -->
            <div class="flex flex-col gap-3">
              <h3
                class="font-mono text-xs font-bold text-primary uppercase tracking-widest"
              >
                // Current Assignment
              </h3>
              <div
                class="font-mono text-sm text-foreground/80 flex flex-col gap-2"
              >
                <p>
                  Operative is currently assigned to the UESC Marathon. Primary
                  function involves security detail and hazardous environment
                  operations.
                </p>
                <p
                  class="flex items-center flex-wrap gap-2 text-primary/70 bg-primary/5 p-2 border-l-2 border-primary"
                >
                  <span class="text-destructive font-bold"
                    >[REDACTED EVENT LOG]</span
                  >
                  <Skeleton
                    className="h-4 w-full max-w-[150px] inline-block rounded-none bg-foreground/20"
                  />
                  <Skeleton
                    className="h-4 w-full max-w-[100px] inline-block rounded-none bg-foreground/20"
                  />
                  <Skeleton
                    className="h-4 w-full max-w-[60px] inline-block rounded-none bg-foreground/20"
                  />
                  during the Tau Ceti orbit cycle.
                </p>
              </div>
            </div>

            <Separator className="bg-border/20" />

            <!-- Activity Audit Log Timeline (data-driven) -->
            <div class="flex flex-col gap-3">
              <h3
                class="font-mono text-xs font-bold text-primary uppercase tracking-widest"
              >
                // Activity Audit Log
              </h3>
              <ul
                class="font-mono text-sm text-foreground/80 flex flex-col gap-5 list-none p-0"
              >
                {
                  historyEvents.map((event) => (
                    <li class="pl-4 border-l border-primary/30 relative min-w-0">
                      <span
                        class={`absolute w-2 h-2 left-[-5px] top-1 block shrink-0
                      ${
                        event.current
                          ? "bg-green-500 shadow-[0_0_5px_rgba(34,197,94,1)]"
                          : "bg-primary"
                      }
                    `}
                      />
                      <div class="flex flex-wrap justify-between text-xs text-muted-foreground mb-1 uppercase tracking-widest gap-1">
                        <span
                          class={`${event.current ? "text-primary" : ""} shrink-0`}
                        >
                          {event.date}
                        </span>
                        <span class="font-bold text-foreground truncate max-w-[55%]">
                          {event.title}
                        </span>
                      </div>
                      <p class="wrap-break-word leading-relaxed">
                        {event.desc}
                      </p>
                    </li>
                  ))
                }
              </ul>
            </div>

            <Separator className="bg-border/20" />

            <!-- Compliance & Security Status -->
            <div
              class="border border-primary/40 bg-primary/5 p-4 relative overflow-hidden"
            >
              <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-primary">
              </div>
              <h3
                class="font-sans text-base font-bold uppercase text-primary tracking-widest mb-2 flex items-center gap-2 pl-2"
              >
                <span class="block w-2.5 h-2.5 bg-primary shrink-0"></span>
                Compliance &amp; Security Status
              </h3>
              <p
                class="font-mono text-sm text-foreground/80 pl-2 leading-relaxed"
              >
                <span class="text-primary font-bold"
                  >ACCOUNT IN GOOD STANDING.</span
                > No violations of UESC network protocols detected. Operative is cleared
                for unrestricted publishing access. Zero infractions recorded. Security
                clearance renewed <Skeleton
                  className="h-4 w-[50px] inline-block align-middle rounded-none bg-primary/20"
                /> cycles ago.
              </p>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes scan {
    0% {
      top: 0;
    }
    50% {
      top: 98%;
    }
    100% {
      top: 0;
    }
  }
</style>
