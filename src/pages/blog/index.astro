---
import Layout from "../../layouts/Layout.astro";
import { Badge } from "@/components/ui/badge";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Button } from "@/components/ui/button";
import PostCard from "@/components/PostCard.astro";

import { posts, categories } from "@/lib/mockData";
---

<Layout title="Ship Logs">
  <div class="flex flex-col gap-8 max-w-4xl w-full mx-auto pb-12">
    <!-- Header Area -->
    <div class="border-b border-border/50 pb-6 relative overflow-hidden">
      <div
        class="absolute right-0 top-0 text-primary/5 select-none font-bold text-9xl leading-none -mt-4 pointer-events-none"
      >
        04
      </div>
      <h1
        class="text-2xl sm:text-3xl font-bold font-sans tracking-widest text-primary uppercase mb-2 relative z-10"
      >
        Ship Logs &amp; Transmissions
      </h1>
      <p
        class="font-mono text-muted-foreground text-sm uppercase relative z-10"
      >
        Accessing UESC Marathon Main Directory...
      </p>
    </div>

    <!-- Breadcrumbs -->
    <nav
      class="font-mono text-[10px] sm:text-xs tracking-[0.2em] text-muted-foreground/60 uppercase -mt-4"
    >
      SYS.PATH: <span class="text-primary/40">ROOT</span> /
      <span class="text-primary/40">DATABANKS</span> /
      <span class="text-primary">SHIP_LOGS</span>
    </nav>

    <!-- Search & Filter Section -->
    <div
      class="bg-card/50 border border-border/50 p-4 sm:p-6 flex flex-col gap-6 relative overflow-hidden"
    >
      <div class="absolute inset-0 bg-primary/5 pattern-grid-lg opacity-50">
      </div>

      <div class="relative flex flex-col gap-4">
        <!-- Category Filters -->
        <div class="flex flex-col gap-2">
          <Label
            className="font-mono text-xs text-muted-foreground tracking-widest uppercase"
          >
            DATABANK CLASSIFICATION
          </Label>
          <div class="flex flex-wrap gap-2">
            {
              categories.map((cat, i) => (
                <Button
                  variant={i === 0 ? "default" : "outline"}
                  className={`rounded-none font-mono text-xs uppercase tracking-widest h-10 ${i !== 0 ? "border-border/50 text-muted-foreground hover:text-primary" : ""}`}
                >
                  [{cat}]
                </Button>
              ))
            }
          </div>
        </div>

        <div class="w-full h-px bg-border/50 my-2"></div>

        <!-- Search Bar -->
        <div class="flex flex-col gap-2">
          <Label
            htmlFor="search"
            className="font-mono text-primary tracking-widest uppercase flex items-center gap-2"
          >
            <span class="w-2 h-2 bg-primary animate-pulse"></span>
            Query Local Databanks
          </Label>
          <Input
            id="search"
            placeholder="ENTER SEARCH TERMS..."
            className="font-mono rounded-none border-primary/50 bg-background/50 focus-visible:ring-primary focus-visible:border-primary uppercase text-primary placeholder:text-primary/30 w-full h-12"
          />
        </div>
      </div>
    </div>

    <!-- Results Grid -->
    <div class="grid grid-cols-1 gap-6 mt-4">
      {posts.map((post) => <PostCard post={post} variant="list" />)}
    </div>

    <!-- Pagination (Mock) -->
    <div
      class="flex justify-between items-center pt-6 border-t border-border/50 font-mono text-sm uppercase"
    >
      <span class="text-muted-foreground hidden sm:block"
        >Showing 1-5 of 1,024 records</span
      >
      <span class="text-muted-foreground sm:hidden">1-5 / 1024</span>
      <div class="flex gap-2 text-primary">
        <span class="opacity-50 cursor-not-allowed">&lt; PREV</span>
        <span>|</span>
        <span class="hover:underline cursor-pointer">NEXT &gt;</span>
      </div>
    </div>
  </div>
</Layout>
