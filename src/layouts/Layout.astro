---
import "@/styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import MobileNav from "@/components/MobileNav.astro";
import { ClientRouter } from "astro:transitions";
import { Toaster } from "@/components/ui/sonner";

interface Props {
  title?: string;
}

const { title = "Marathon Terminal" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {title === "Marathon Terminal" ? title : `${title} | Marathon Terminal`}
    </title>
    <ClientRouter />
  </head>
  <body
    class="min-h-screen m-0 p-0 pb-14 md:pb-0 flex flex-col font-mono antialiased selection:bg-primary selection:text-primary-foreground relative overflow-x-hidden"
  >
    <!-- CRT Scanline Overlay -->
    <div
      class="pointer-events-none fixed inset-0 z-50 bg-[linear-gradient(rgba(18,16,16,0)_50%,rgba(0,0,0,0.25)_50%),linear-gradient(90deg,rgba(255,0,0,0.06),rgba(0,255,0,0.02),rgba(0,0,255,0.06))] bg-[length:100%_4px,3px_100%] opacity-20"
    >
    </div>

    <Header />

    <main class="flex-1 w-full flex flex-col items-center">
      <div
        class="w-full max-w-5xl px-4 md:px-8 flex flex-col flex-1 pb-20 md:pb-0"
      >
        <slot />
      </div>
    </main>

    <Footer />
    <MobileNav />
    <Toaster client:load />
  </body>
</html>
