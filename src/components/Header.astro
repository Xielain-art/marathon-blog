---
import { Badge } from "@/components/ui/badge";
---

<header
  class="sticky top-0 z-50 w-full border-b border-border/50 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
  <div
    class="container mx-auto flex h-16 items-center justify-between px-4 md:px-8"
  >
    <div class="flex items-center gap-4">
      <a
        href="/"
        class="text-lg sm:text-xl font-mono font-bold text-primary tracking-widest uppercase hover:text-primary/80 transition-colors"
      >
        >_MARATHON
      </a>
      <Badge
        variant="outline"
        className="hidden sm:inline-flex rounded-none border-primary/50 text-primary font-mono text-xs animate-pulse"
      >
        NETWORK STATUS: SECURE
      </Badge>
    </div>
    <nav
      class="flex items-center gap-2 sm:gap-4 font-mono text-xs sm:text-sm uppercase"
    >
      <a
        href="/blog"
        class="text-muted-foreground hover:text-primary transition-colors"
        >Databanks</a
      >
      <a
        href="/about"
        class="text-muted-foreground hover:text-primary transition-colors"
      >
        Archv
      </a>
      <a
        href="/create"
        class="text-primary hover:text-primary/80 transition-colors font-bold flex items-center gap-1"
      >
        <span class="text-xs">+</span>New
      </a>
      <a
        href="/settings"
        class="text-muted-foreground hover:text-primary transition-colors ml-2"
        title="Settings"
      >
        [CFG]
      </a>
      <div class="h-4 w-px bg-border/50 mx-2"></div>
      <a
        href="/login"
        class="text-primary hover:text-primary/80 transition-colors">Login</a
      >
      <a
        href="/register"
        class="text-muted-foreground hover:text-primary transition-colors"
        >Register</a
      >
    </nav>
  </div>
</header>
