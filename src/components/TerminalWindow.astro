---
import { Card } from "@/components/ui/card";

interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<Card
  className={`w-full rounded-none border-primary/50 bg-card/60 backdrop-blur shadow-[0_0_30px_rgba(var(--primary),0.1)] relative overflow-hidden ${className}`}
>
  <!-- Decorative Corners -->
  <div
    class="absolute top-0 left-0 w-2 h-2 border-t-2 border-l-2 border-primary"
  >
  </div>
  <div
    class="absolute top-0 right-0 w-2 h-2 border-t-2 border-r-2 border-primary"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 w-2 h-2 border-b-2 border-l-2 border-primary"
  >
  </div>
  <div
    class="absolute bottom-0 right-0 w-2 h-2 border-b-2 border-r-2 border-primary"
  >
  </div>

  <slot />
</Card>
